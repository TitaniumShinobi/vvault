# VVAULT Environment Configuration
# Copy this file to .env and modify as needed

# Flask/JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"

# Server Configuration
VVAULT_PORT=8000
VVAULT_FRONTEND_URL=http://localhost:7784
VVAULT_BACKEND_URL=http://localhost:8000

# CORS Configuration
CORS_ORIGINS=http://localhost:7784,http://localhost:5173

# Cloudflare Turnstile (Human Verification)
# Get your keys from: https://developers.cloudflare.com/turnstile/
TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# OAuth Configuration (for unified user registry)
# These credentials should match Chatty and CleanHouse for unified authentication

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret  # Optional, PKCE is used for security

# Microsoft OAuth (Azure AD)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret  # Optional, PKCE is used for security

# Apple OAuth (Sign in with Apple)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret  # Required for Apple

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret  # Required for GitHub

# Database Configuration
# VVAULT uses MongoDB for unified user registry (shared with Chatty)
# Match Chatty's format: MongoDB Atlas connection string without database name in URI
# Database name is specified in code (like Chatty does)
MONGODB_URI=mongodb+srv://dwoodson92_db_user:7Ez8fnZaWsrqQCo1@chatty.obnxwcm.mongodb.net/?retryWrites=true&w=majority&appName=VVAULT
# For local development:
# MONGODB_URI=mongodb://localhost:27017/vvault

# Optional: Local SQLite fallback (if MongoDB unavailable)
VVAULT_DB_PATH=./vvault.db

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-in-production
SESSION_TIMEOUT=3600  # Session timeout in seconds (default: 1 hour)

# Security Configuration
ALLOWED_ORIGINS=http://localhost:7784,http://localhost:5173
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # Requests per window
RATE_LIMIT_WINDOW=60     # Window in seconds

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/vvault.log

# Development/Production Mode
NODE_ENV=development
# Options: development, production, test

# Optional: Email Configuration (for email verification)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
# SMTP_FROM=noreply@vvault.com

# Optional: Vector Database (ChromaDB/FAISS)
# CHROMADB_PATH=./chromadb
# CHROMADB_COLLECTION=vvault_memories

# Optional: Blockchain Configuration (if using blockchain features)
# BLOCKCHAIN_NETWORK=ethereum
# BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your-project-id
# WALLET_PRIVATE_KEY=your-wallet-private-key  # NEVER commit this!

# Optional: External API Keys
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

