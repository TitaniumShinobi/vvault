modules = ["python-3.11", "nodejs-20", "postgresql-16"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VVAULT Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VVAULT Web App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Ollama LLM"

[[workflows.workflow]]
name = "VVAULT Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python vvault/server/vvault_web_server.py"
waitForPort = 8000

[[workflows.workflow]]
name = "VVAULT Web App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Ollama LLM"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "OLLAMA_HOST=0.0.0.0:11434 ollama serve"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 7784
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 11434
externalPort = 3001

[agent]
expertMode = true
integrations = ["github:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cairo", "cargo", "ffmpeg-full", "freetype", "ghostscript", "gobject-introspection", "gtk3", "kubo", "libiconv", "libxcrypt", "libyaml", "ollama", "openssl", "pkg-config", "qhull", "rustc", "tcl", "tk"]

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "gunicorn --bind 0.0.0.0:5000 vvault.server.vvault_web_server:app"]
build = ["bash", "-c", "npm install && npm run build"]
